<h2 class="page_title">ログイン</h2>

<div class="user-form-wrap">
  <%= form_with model: @user, url: user_session_path,
              html:{class:"user-form"} do |f| %>

    <div class="error-messages">
      <%= render 'shared/error_messages', model: f.object %>
    </div>
    
    <div class="form__group">
      <%= f.label :email, "メールアドレス(必須)" %>
      <%= f.email_field :email, placeholder:"例) taro@trace.jp.com", autocomplete: true %>
    </div>

    <div class="form__group">
      <%= f.label :password, "パスワード(必須)" %>
      <%= f.password_field :password, placeholder:"全角半角英数字を全て含む6文字以上で入力してください。" autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "ログイン" %>
    </div>

  <% end %>
</div>
