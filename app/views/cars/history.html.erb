<h2 class="page_title">変更履歴</h2>

<div class="history-wrap">
  <h3 class="table_title">車両「<%= @car.car_name %>」の変更履歴</h3>
  <% if @history.any? %>
    <table class="history-table">
      <thead>
        <tr>
          <th>日時<br/>
              /変更者</th>
          <th>変更</th>
          <th>変更箇所</th>
          <th>対象</th>
        </tr>
      </thead>
      <tbody>
        <% @history.each do |h| %>
          <tr>
            <td><%= h[:time].strftime("%m月%d日 %H:%M") %><br/>
                /<%= h[:user].first_name %><%= h[:user].last_name %></td>
            <td><%= h[:event] %></td>
            <td><%= h[:model] %></td>
            <td>車両：<%= h[:car].car_name %><br/>
                演算：<%= h[:calculation]&.calculation_name || "-" %><br/>
                信号：<%= h[:signal_name] || "-" %><br/>
                信号の種類：<%= h[:signal_type_id]&.name || "-" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <%= link_to '戻る', car_path(@car), class: "btn btn--return" %>
</div>