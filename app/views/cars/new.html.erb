<h1>Car registration</h1>

<%= form_with model: @car, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div>
    車両名
    <%= f.text_area :car_name %>
  </div>

      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :launch_date,
                      class:'select-birth',
                      id:"launch-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 2000,
                      end_year: (Time.now.year + 10),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

  <%= f.submit 'Registration' %>

<% end %>