<h2 class="car-index__title">車両一覧</h2>

<ul class="car-list">
  <% @cars.each do |car| %>
    <li>車両名：<%= link_to car.car_name, car_path(car) %></li>
    <li>発売日：<%= car.launch_date %></li>
    <li>登録者：<%= car.user.first_name %><%= car.user.last_name %></li>
  <% end %>
</ul>

<% if user_signed_in? %>
    <a class="btn btn--primary", id="new-edit-car">新規登録</a>
  <%# <%= link_to "新規登録", new_car_path, class:"car-index__new" %>
<% end %>

<%# New Form ------------------------------------------------------%>
<div class="modal" id= "car-form" data-error-messages="<%= @car.errors.any? %>">
  <div class="modal-content">
    <%= form_with model: @car, local: true, data: { turbo: false } do |f| %>

        <div class="error-messages">
          <%= render 'shared/error_messages', model: f.object %>
        </div>

      <div class="car-form__group">
        <label class="car-form__label">車両名</label>
        <%= f.text_area :car_name, class: "car-form__input" %>
      </div>

      <div class="input-birth-wrap">
        <%= raw sprintf(
                    f.date_select(
                      :launch_date,
                      class:'select-birth',
                      id:"launch-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 2000,
                      end_year: (Time.now.year + 10),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

      <%= f.submit 'Registration', class: "car-form__submit" %>
    <% end %>
  </div>
</div>