<h1 class="car-form-title">Car registration</h1>

<div class="car-form-wrap">
  <%= form_with model: @car, local: true, html: { class: "car-form" } do |f| %>

    <div class="error-messages">
      <%= render 'shared/error_messages', model: f.object %>
    </div>

    <div class="car-form__group">
      <label class="car-form__label">車両名</label>
      <%= f.text_area :car_name, class: "car-form__input" %>
    </div>

    <div class="input-birth-wrap">
      <%= raw sprintf(
                  f.date_select(
                    :launch_date,
                    class:'select-birth',
                    id:"launch-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 2000,
                    end_year: (Time.now.year + 10),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>

    <%= f.submit 'Registration', class: "car-form__submit" %>
  <% end %>
</div>