<h2 class="profile-title">プロフィール</h2>

<div class="profile-wrap">
  <%= link_to "編集", edit_user_path(@user), class:"profile-edit" %>

  <ul class="profile-list">
    <li>部署名：<%= @user.department.name %></li>
    <li>職番：<%= @user.job_num %></li>
    <li>Email：<%= @user.email %></li>
    <li>苗字：<%= @user.last_name %></li>
    <li>名前：<%= @user.first_name %></li>
    <li>苗字カナ：<%= @user.last_name_kana %></li>
    <li>名前カナ：<%= @user.first_name_kana %></li>
  </ul>

  <%= link_to "Return", cars_path, class:"profile-return" %>
</div>